<h1><%= @category.name %></h1>
<ul>
	<% @category.posts.each do |post| %>
		<ul class="thumbnails">
		<li class="span8">
			<div class="thumbnail">
				<a href="<%= post.quoted_from %>"><h3 style="font-weight: bold;"><%= post.quoted_from %></h3></a>
				<a href="posts/<%= post.id %>" class="thumbnail">
					<img src="<%= post.img_url %>" alt=""/>
				</a>
				<a href="<%= post.img_url %>"><%= post.img_url %></a><br>
				<small>Posted by: </small><br><small>Tags: <%= convert_to_tag_link post.tag_list %></small> 
				<a class="btn btn-mini pull-right" href="#"><i class="icon-star"></i>Favorite</a>
			</div>
		</li>
	</ul>
	<% end %>
</ul>