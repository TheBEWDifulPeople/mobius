<ul class="thumbnails">
<% @posts.in_groups_of(2).each do |post_pair| %>
	<li class="row-fluid">
		<% post_pair.each do |post|  %>
			<% unless post == nil  %>
			<div class="thumbnail span5 pull-left">
				<a href="<%= post.quoted_from %>"><h3 style="font-weight: bold;"><%= post.quoted_from %></h3></a>
				<a href="posts/<%= post.id %>" class="thumbnail"><img src="<%= post.img_url %>" alt=""/></a>
				<a href="<%= post.img_url %>"><%= post.img_url.truncate(55) %></a><br>
				<small>Posted by: <%= link_to post.user.email, profile_path(post.user) %></small><br><small>Tags: <%= convert_to_tag_link post.tag_list %></small> 
			</div>
			<div class="span1"></div>
			<% end %>
		<% end  %>
	</li>
<% end %>
</ul>
